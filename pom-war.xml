    <build>
        <finalName>garnet-core-be</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.tomcat.maven</groupId>
                <artifactId>tomcat7-maven-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <path>/${project.build.finalName}</path>
                    <url>${tomcat-url}</url>
                    <username>${tomcat-username}</username>
                    <password>${tomcat-password}</password>
                    <update>true</update>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>dev</id>
            <properties>
